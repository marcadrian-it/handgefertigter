				{navItems.map((item) => {
					return (
					  <a
						class={`nav-item hover:underline decoration-2 ${item.path === pathname ? "underline" : ""}`}
						href={item.path}
					  >
						{item.label}
					  </a>
					);
				  })}
			</nav>
		</header>
		<main>
			<slot />
		</main>
		<footer class="flex justify-center footer mt-auto p-6">
