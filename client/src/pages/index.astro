---
import Layout from '../layouts/default.astro'
import hero from '../assets/hero.jpg';
import ShopItems from '../components/ShopItems.astro';
export const prerender = true;
---

<Layout>
	<section class="flex overflow-hidden relative py-[16%] px-[19%] ">
		<div class="relative z-10 max-w-[420px]">
			<h1 class="text-4xl font-bold mb-2" >Einzigartig und perfekt für Kinder</h1>
			<p class="text-2xl mb-4">
				Entdecken Sie die Freude an bestickten Spielzeugen mit Häkeln.
			</p>
			<a href="/einkauf" class="inline-block bg-crimson-800 text-lg text-white rounded-md px-4 py-1.5 hover:scale-105 hover:bg-crimson-700 font-bold">Häkelarbeiten kaufen</a>
		</div>
		<img
		class="w-full h-full z-1 absolute inset-0 object-cover"
			src={hero}
			alt="Foto eines handgefertigten, bestickten Spielzeugs mit Häkelarbeit."
		/>
	</section>
	<section class="block mt-12">
		<div>
			<ShopItems count={3} showCart={false} >
		</div>
		<p class="text-purple underline text-center p-2"><a href="/einkauf">Alle Häkelarbeiten kaufen hier</a></p>
	</section>
</Layout>
